{
	"name": "@untemps/svelte-palette",
	"version": "3.0.0",
	"author": "Vincent Le Badezet <v.lebadezet@untemps.net>",
	"license": "MIT",
	"homepage": "https://untemps.github.io/svelte-palette",
	"repository": "https://github.com/untemps/svelte-palette",
	"bugs": "https://github.com/untemps/svelte-palette/issues",
	"description": "Svelte component to display a customisable color picker",
	"keywords": ["palette", "color", "color-picker", "svelte", "svelte-component", "component", "javascript"],
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "dist/index.js",
	"module": "dist/index.umd.cjs",
	"svelte": "src/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.umd.cjs"
		}
	},
	"files": ["src", "dist"],
	"engines": {
		"node": ">=18"
	},
	"devDependencies": {
		"@commitlint/cli": "^17.7.1",
		"@commitlint/config-conventional": "^17.7.0",
		"@semantic-release/changelog": "^6.0.3",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^9.1.0",
		"@sveltejs/vite-plugin-svelte": "^2.4.6",
		"@testing-library/jest-dom": "^6.1.3",
		"@testing-library/svelte": "^4.0.3",
		"@vitest/coverage-v8": "^0.34.5",
		"cross-env": "^7.0.3",
		"husky": "^8.0.3",
		"jsdom": "^22.1.0",
		"prettier": "^3.0.3",
		"prettier-plugin-svelte": "^3.0.3",
		"rimraf": "^5.0.4",
		"semantic-release": "^22.0.5",
		"vite": "^4.4.9",
		"vitest": "^0.34.5"
	},
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"dependencies": {
		"@untemps/dom-observer": "^2.0.0",
		"@untemps/svelte-use-drop-outside": "^1.6.0",
		"@untemps/svelte-use-tooltip": "^2.8.0",
		"@untemps/utils": "^3.0.0"
	},
	"release": {
		"branches": [
			"main",
			{
				"name": "beta",
				"prerelease": true
			}
		],
		"plugins": [
			[
				"@semantic-release/commit-analyzer",
				{
					"releaseRules": [
						{
							"type": "chore",
							"scope": "force",
							"release": "patch"
						}
					]
				}
			],
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			"@semantic-release/npm",
			"@semantic-release/git",
			[
				"@semantic-release/github",
				{
					"assets": [
						{
							"path": "dist/index.js",
							"label": "ES distribution"
						},
						{
							"path": "dist/index.umd.cjs",
							"label": "UMD distribution"
						}
					]
				}
			]
		]
	},
	"scripts": {
		"dev": "cd dev && yarn && yarn start",
		"test": "vitest watch --coverage",
		"test:ci": "vitest run",
		"build": "rimraf dist && vite build",
		"prettier": "prettier --write --plugin prettier-plugin-svelte . && git add . && git status",
		"prepare": "husky install"
	}
}
