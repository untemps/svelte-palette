{
	"name": "@untemps/svelte-palette",
	"version": "2.4.1",
	"author": "Vincent Le Badezet <v.lebadezet@untemps.net>",
	"license": "MIT",
	"description": "Svelte component to display a customisable color picker",
	"keywords": [
		"palette",
		"color",
		"color-picker",
		"svelte",
		"svelte-component",
		"component",
		"javascript"
	],
	"private": false,
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"main": "dist/index.js",
	"module": "dist/index.umd.cjs",
	"svelte": "src/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/index.umd.cjs"
		}
	},
	"files": [
		"src",
		"dist"
	],
	"devDependencies": {
		"@babel/cli": "^7.19.3",
		"@babel/core": "^7.19.3",
		"@babel/plugin-proposal-class-properties": "^7.18.6",
		"@babel/plugin-transform-runtime": "^7.19.1",
		"@babel/preset-env": "^7.19.3",
		"@commitlint/cli": "^17.1.2",
		"@commitlint/config-conventional": "^17.1.0",
		"@semantic-release/changelog": "^6.0.1",
		"@semantic-release/git": "^10.0.1",
		"@semantic-release/github": "^8.0.6",
		"@sveltejs/vite-plugin-svelte": "^2.4.6",
		"@testing-library/dom": "^8.18.1",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/svelte": "^4.0.3",
		"babel-jest": "^29.1.2",
		"cross-env": "^7.0.3",
		"husky": "^8.0.1",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^29.1.2",
		"jest-environment-jsdom": "^29.1.2",
		"prettier": "^2.7.1",
		"prettier-plugin-svelte": "^2.10.1",
		"rimraf": "^3.0.2",
		"semantic-release": "^19.0.5",
		"svelte-jester": "^3.0.0",
		"vite": "^4.4.9"
	},
	"peerDependencies": {
		"svelte": "^4.0.0"
	},
	"dependencies": {
		"@untemps/dom-observer": "^2.0.0",
		"@untemps/svelte-use-drop-outside": "^1.6.0",
		"@untemps/svelte-use-tooltip": "^2.7.4",
		"@untemps/utils": "^3.0.0"
	},
	"jest": {
		"transform": {
			"^.+\\.js$": "babel-jest",
			"^.+\\.svelte$": "svelte-jester"
		},
		"moduleNameMapper": {
			"\\.(css|less|scss)$": "identity-obj-proxy"
		},
		"moduleFileExtensions": [
			"js",
			"svelte"
		],
		"extensionsToTreatAsEsm": [
			".svelte"
		],
		"testEnvironment": "jsdom",
		"setupFilesAfterEnv": [
			"@testing-library/jest-dom/extend-expect"
		]
	},
	"release": {
		"branches": [
			"main",
			{
				"name": "beta",
				"prerelease": true
			}
		],
		"plugins": [
			[
				"@semantic-release/commit-analyzer",
				{
					"releaseRules": [
						{
							"type": "chore",
							"scope": "force",
							"release": "patch"
						}
					]
				}
			],
			"@semantic-release/release-notes-generator",
			"@semantic-release/changelog",
			"@semantic-release/npm",
			"@semantic-release/git",
			[
				"@semantic-release/github",
				{
					"assets": [
						{
							"path": "dist/index.js",
							"label": "ES distribution"
						},
						{
							"path": "dist/index.umd.cjs",
							"label": "UMD distribution"
						}
					]
				}
			]
		]
	},
	"scripts": {
		"dev": "cd dev && rimraf dist && yarn && yarn dev",
		"test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest -u --watch --coverage",
		"test:ci": "jest -u -b --ci --coverage",
		"build": "rimraf dist && vite build",
		"prettier": "prettier \"*/**/*.js\" --ignore-path ./.prettierignore --write && git add . && git status",
		"prepare": "husky install"
	}
}
